# Example environment variables for CognitionOS
# Copy this file to .env and fill in your values

# Environment
ENVIRONMENT=development

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=cognitionos
DB_USERNAME=cognition
DB_PASSWORD=changeme_secure_password
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VIRTUAL_HOST=/

# API Configuration (V3)
API_HOST=0.0.0.0
API_PORT=8100
API_DEBUG=false
API_LOG_LEVEL=info
API_RELOAD=false
API_WORKERS=4
API_CORS_ORIGINS=http://localhost:3000,http://localhost:8000
API_RATE_LIMIT_PER_MINUTE=60

# LLM Provider Configuration
LLM_OPENAI_API_KEY=sk-your-openai-key-here
LLM_ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
LLM_DEFAULT_PROVIDER=openai
LLM_DEFAULT_MODEL=gpt-4
LLM_MAX_RETRIES=3
LLM_TIMEOUT=60
LLM_MAX_TOKENS=4096

# Celery Task Queue
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=UTC
CELERY_TASK_TIME_LIMIT=3600

# Security Configuration
SECURITY_SECRET_KEY=generate_random_32_char_string_here
SECURITY_ALGORITHM=HS256
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY_REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_SECRET=generate_random_32_char_string_here

# Observability Configuration
OBSERVABILITY_LOG_LEVEL=info
OBSERVABILITY_LOG_FORMAT=json
OBSERVABILITY_ENABLE_TRACING=true
OBSERVABILITY_JAEGER_HOST=localhost
OBSERVABILITY_JAEGER_PORT=6831
OBSERVABILITY_ENABLE_METRICS=true
OBSERVABILITY_METRICS_PORT=9090

# Legacy Service Configuration (V1/V2)
LOG_LEVEL=INFO
LOG_FORMAT=json
SANDBOX_ENABLED=true
CACHE_ENABLED=true
RATE_LIMIT_ENABLED=true
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
