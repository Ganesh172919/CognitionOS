# CognitionOS - Localhost Development Environment
# Auto-generated configuration for local development
# Copy this to .env or use scripts/setup-localhost.sh

# ============================================
# ENVIRONMENT
# ============================================
ENVIRONMENT=development
DEBUG=true

# ============================================
# DATABASE (PostgreSQL)
# ============================================
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=cognitionos_dev
DB_USERNAME=cognition_dev
DB_PASSWORD=dev_password_local
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# ============================================
# REDIS CACHE
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=20

# ============================================
# RABBITMQ MESSAGE BROKER
# ============================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VIRTUAL_HOST=/

# ============================================
# API SERVER (V3)
# ============================================
API_HOST=0.0.0.0
API_PORT=8100
API_DEBUG=true
API_LOG_LEVEL=debug
API_RELOAD=true
API_WORKERS=1
API_CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8100
API_RATE_LIMIT_PER_MINUTE=1000

# ============================================
# LLM PROVIDERS (Optional for local dev)
# ============================================
LLM_OPENAI_API_KEY=sk-test-key-replace-with-real-key
LLM_ANTHROPIC_API_KEY=sk-ant-test-key-replace-with-real-key
LLM_DEFAULT_PROVIDER=openai
LLM_DEFAULT_MODEL=gpt-3.5-turbo
LLM_MAX_RETRIES=3
LLM_TIMEOUT=60
LLM_MAX_TOKENS=4096

# ============================================
# CELERY TASK QUEUE
# ============================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=UTC
CELERY_TASK_TIME_LIMIT=3600

# ============================================
# SECURITY (Auto-generated for localhost)
# ============================================
SECURITY_SECRET_KEY=localhost_dev_secret_key_change_in_production_12345678
SECURITY_ALGORITHM=HS256
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=60
SECURITY_REFRESH_TOKEN_EXPIRE_DAYS=30
JWT_SECRET=localhost_jwt_secret_key_change_in_production_987654321

# ============================================
# OBSERVABILITY (Simplified for local)
# ============================================
OBSERVABILITY_LOG_LEVEL=debug
OBSERVABILITY_LOG_FORMAT=colored
OBSERVABILITY_ENABLE_TRACING=false
OBSERVABILITY_JAEGER_HOST=localhost
OBSERVABILITY_JAEGER_PORT=6831
OBSERVABILITY_ENABLE_METRICS=true
OBSERVABILITY_METRICS_PORT=9090

# ============================================
# LEGACY COMPATIBILITY
# ============================================
LOG_LEVEL=DEBUG
LOG_FORMAT=colored
SANDBOX_ENABLED=true
CACHE_ENABLED=true
RATE_LIMIT_ENABLED=false
OPENAI_API_KEY=sk-test-key-replace-with-real-key
ANTHROPIC_API_KEY=sk-ant-test-key-replace-with-real-key

# ============================================
# DEVELOPMENT FLAGS
# ============================================
DEV_MODE=true
HOT_RELOAD=true
AUTO_MIGRATE=true
CREATE_TEST_DATA=true
SKIP_AUTH_IN_DEV=false
